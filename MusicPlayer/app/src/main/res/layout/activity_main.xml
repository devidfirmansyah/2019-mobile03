<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF2C3E50"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/current_song_image"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="127dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="54dp"
        android:layout_height="43dp"
        app:srcCompat="@drawable/menu"
        tools:layout_editor_absoluteX="186dp"
        tools:layout_editor_absoluteY="48dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="70dp"
        android:layout_height="49dp"
        app:srcCompat="@drawable/play_button"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="615dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="36dp"
        android:layout_height="34dp"
        app:srcCompat="@drawable/fast_forward"
        tools:layout_editor_absoluteX="265dp"
        tools:layout_editor_absoluteY="623dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="36dp"
        android:layout_height="34dp"
        app:srcCompat="@drawable/revind"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="623dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="36dp"
        android:layout_height="34dp"
        app:srcCompat="@drawable/speaker"
        tools:layout_editor_absoluteX="336dp"
        tools:layout_editor_absoluteY="623dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="36dp"
        android:layout_height="34dp"
        app:srcCompat="@drawable/repeat"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="623dp" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/prev_song_image"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="175dp" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/wave"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="504dp" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/next_song_image"
        tools:layout_editor_absoluteX="372dp"
        tools:layout_editor_absoluteY="175dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jihan Audi"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="397dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sayang"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="182dp"
        tools:layout_editor_absoluteY="435dp" />

</androidx.constraintlayout.widget.ConstraintLayout>